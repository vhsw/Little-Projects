{
  "name": "little-projects",
  "version": "1.0.0",
  "description": "Repository for small projects that do not deserve their own repo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vhsw/Little-Projects.git"
  },
  "author": "Alexey Dubrov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vhsw/Little-Projects/issues"
  },
  "homepage": "https://github.com/vhsw/Little-Projects#readme",
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-p5js": "^1.0.1",
    "eslint-plugin-import": "^2.20.2"
  },
  "dependencies": {
    "@types/p5": "^0.9.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": [
      "airbnb-base",
      "eslint:recommended",
      "p5js"
    ],
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "no-param-reassign": [
            "error",
            {
              "props": false
            }
          ],
          "varsIgnorePattern": "setup|draw|preload|mousePressed|keyPressed"
        }
      ]
    }
  }
}
